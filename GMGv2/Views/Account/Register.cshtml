@model GMGv2.Models.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - GMG</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="~/lib/lucide/lucide.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="logo">
                    <i data-lucide="user-plus" width="28" height="28"></i>
                </div>
                <h1>Create Account</h1>
                <p>Sign up to get started with Gardeny</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Register" asp-controller="Account" method="post">
                <div class="form-group">
                    <label class="form-label" for="Username">Username</label>
                    <div class="input-wrapper">
                        <i class="input-icon" data-lucide="user" width="18" height="18"></i>
                        <input asp-for="Username" type="text" class="form-control" id="Username" placeholder="johndoe" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="Email">Email</label>
                    <div class="input-wrapper">
                        <i class="input-icon" data-lucide="mail" width="18" height="18"></i>
                        <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="you@example.com" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="FirstName">First Name</label>
                    <div class="input-wrapper">
                        <i class="input-icon" data-lucide="user-circle" width="18" height="18"></i>
                        <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="John" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="LastName">Last Name</label>
                    <div class="input-wrapper">
                        <i class="input-icon" data-lucide="user-circle" width="18" height="18"></i>
                        <input asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="Doe" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="Password">Password</label>
                    <div class="input-wrapper">
                        <i class="input-icon" data-lucide="lock" width="18" height="18"></i>
                        <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="••••••••" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="ConfirmPassword">Confirm Password</label>
                    <div class="input-wrapper">
                        <i class="input-icon" data-lucide="lock" width="18" height="18"></i>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="••••••••" required />
                    </div>
                </div>

                <button type="submit" class="btn-primary">Create Account</button>
            </form>

            <div class="divider">
                <span>or</span>
            </div>

            <div class="register-link">
                Already have an account? <a asp-action="Login" asp-controller="Account">Sign in</a>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>
