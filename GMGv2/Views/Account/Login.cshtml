@model GMGv2.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - GMG</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="~/lib/lucide/lucide.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="logo">
                    <i data-lucide="shopping-bag" width="28" height="28"></i>
                </div>
                <h1>Welcome Back</h1>
                <p>Sign in to continue to Gardeny</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Login" asp-controller="Account" method="post">
                @* <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" /> *@

                <div class="form-group">
                    <label class="form-label" for="Email">Email</label>
                    <div class="input-wrapper">
                        <i class="input-icon" data-lucide="mail" width="18" height="18"></i>
                        <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="you@example.com" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="Password">Password</label>
                    <div class="input-wrapper">
                        <i class="input-icon" data-lucide="lock" width="18" height="18"></i>
                        <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="••••••••" required />
                    </div>
                </div>

                <div class="form-group">
                    <div class="checkbox-wrapper">
                        <input asp-for="RememberMe" type="checkbox" id="RememberMe" />
                        <label for="RememberMe">Remember me</label>
                    </div>
                </div>

                <button type="submit" class="btn-primary">Sign in</button>
            </form>

            <div class="divider">
                <span>or</span>
            </div>

            <div class="register-link">
                Don't have an account? <a asp-action="Register" asp-controller="Account">Sign up</a>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>
