@model PurchaseCreateViewModel

<form method="post" action="Create" id="purchase-form">
    <div class="page-header">
        <div>
            <div class="page-title">Create purchase</div>
        </div>
        <button type="submit" class="btn btn-primary">Create purchase</button>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-body">
            </div>
        </div>
    </section>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-2">
                    <label class="form-label">Product Name</label>
                    <input type="text" id="product-search" class="form-control" placeholder="Search product by name..." autocomplete="off" />
                    <div id="product-suggestions" class="list-group position-absolute" style="z-index: 1000; max-height: 200px; overflow-y: auto; display: none;"></div>
                </div>
                <div class="col-md-2 mb-2">
                    <label class="form-label">Quantity</label>
                    <input type="number" id="product-quantity" class="form-control" step="0.01" min="0.01" />
                </div>
                <div class="col-md-2 mb-2">
                    <label class="form-label">Unit Price</label>
                    <input type="number" id="product-price" class="form-control" step="0.01" min="0.01" />
                </div>
                <div class="col-md-2 mb-2 d-flex align-items-end">
                    <button type="button" id="add-product-btn" class="btn btn-primary w-100">Add</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Purchase Details</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Subtotal</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="details-table-body">
                    <tr id="empty-row">
                        <td colspan="5" class="text-center text-muted">No products added yet</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                        <td><strong id="total-amount">$0.00</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/js/purchases/create.js" asp-append-version="true"></script>
}